---
import background from '../assets/background.svg';
---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<header id="header">
		<div class="header-left"></div>
		<div class="header-center"></div>
		<div class="header-right"></div>
	</header>
	<main id="main">
		<div id="title-area">
			<div id="title-text">LIFE<br/>PORTFOLIO</div>
			<hr class="title-divider"/>
			<div id="zany">ZANY_WHISPER_</div>
		</div>
	</main>
</div>

<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(80px);
		opacity: 0.8;
	}

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		min-height: calc(100vh - 48px);
		display: flex;
		flex-direction: column;
		position: relative;
	}

	#header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 10px;
		font-size: 12px;
		letter-spacing: 1px;
		color: #6b7280;
	}

	.header-left,
	.header-right {
		flex: 1;
		text-transform: uppercase;
		font-weight: 300;
		font-size: 13px;
	}

	.header-left,
	.header-left:link,
	.header-left:visited,
	.header-left:hover,
	.header-left:active {
		text-decoration: none;
		color: inherit;
		display: inline-block;
	}

	.header-right {
		text-align: right;
		font-size: 13px;
	}

	.header-center {
		flex: 1;
	}

	#main {
		flex: 1;
		position: relative;
	}

	#title-area {
		position: absolute;
		bottom: 10px;
		left: 10px;
		z-index: 1;
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 8px;
	}

	#title-text {
		font-size: 72px;
		font-weight: 700;
		margin: 0;
		color: #111827;
		line-height: 1.1;
		letter-spacing: -2px;
		text-decoration: none;
	}

	.title-divider {
		width: 350px;
		height: 2px;
		border: none;
		background: #001f5c;
		margin: 0;
	}

	#zany {
		font-size: 24px; /* ~1/3 of 72px */
		font-weight: 300;
		color: #111827;
		opacity: 0.9;
		margin-left: 2px;
	}

	#search-icon {
		position: absolute;
		bottom: 10px;
		right: 10px;
		display: flex;
		align-items: center;
		justify-content: center;
		width: 48px;
		height: 48px;
		cursor: pointer;
		text-decoration: none;
		transition: transform 0.2s, opacity 0.2s;
	}

	#search-icon:hover {
		opacity: 0.8;
		transform: scale(1.1);
	}

	#search-icon svg {
		width: 32px;
		height: 32px;
	}

	@media screen and (max-width: 768px) {
		#header {
			padding: 10px;
			font-size: 10px;
		}

		#title-link h1 {
			font-size: 48px;
			letter-spacing: -1px;
		}

		#title-link {
			bottom: 10px;
			left: 10px;
		}

		#search-icon {
			width: 40px;
			height: 40px;
			bottom: 10px;
			right: 10px;
		}

		#search-icon svg {
			width: 24px;
			height: 24px;
		}
	}
</style>
