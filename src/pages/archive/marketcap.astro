import Layout from '../../layouts/Layout.astro';
import fs from 'fs';
import path from 'path';
import { fileURLToPath } from 'url';

const __dirname = path.dirname(fileURLToPath(import.meta.url));
const projectRoot = path.resolve(__dirname, '../../..');
const dataPath = path.resolve(projectRoot, 'src/data/marketcap-top10.json');
const prevDataPath = path.resolve(projectRoot, 'src/data/marketcap-top10.prev.json');

let marketCapData = {
  updatedAt: new Date().toISOString(),
  KR: [],
  US: [],
};

let prevMarketCapData = {
  updatedAt: new Date(Date.now() - 86400000).toISOString(),
  KR: [],
  US: [],
};

try {
  if (fs.existsSync(dataPath)) {
    const rawData = fs.readFileSync(dataPath, 'utf-8');
    marketCapData = JSON.parse(rawData);
  }
} catch (error) {
  console.warn('Error loading current market cap data:', error.message);
}

try {
  if (fs.existsSync(prevDataPath)) {
    const rawData = fs.readFileSync(prevDataPath, 'utf-8');
    prevMarketCapData = JSON.parse(rawData);
  }
} catch (error) {
  console.warn('Error loading previous market cap data:', error.message);
}

const formatDate = (isoString) => {
  const date = new Date(isoString);
  return date.toLocaleString('ko-KR', {
    year: 'numeric',
    month: '2-digit',
    day: '2-digit',
    hour: '2-digit',
    minute: '2-digit',
    hour12: false,
  });
};

// í†µí•© ë¹„êµ ë°ì´í„° ìƒì„±
const createComparisonData = (currentData, prevData) => {
  return currentData.map((currentItem) => {
    const prevItemByRank = prevData.find(p => p.rank === currentItem.rank);
    const prevItemByCompany = prevData.find(p => p.company === currentItem.company);
    
    let change = '=';
    let changeIcon = '-';
    let diff = 0;
    
    if (!prevItemByCompany) {
      change = 'NEW';
      changeIcon = 'ğŸ†•';
    } else if (prevItemByCompany.rank !== currentItem.rank) {
      if (prevItemByCompany.rank > currentItem.rank) {
        diff = prevItemByCompany.rank - currentItem.rank;
        change = `â–²${diff}`;
        changeIcon = 'â–²';
      } else {
        diff = currentItem.rank - prevItemByCompany.rank;
        change = `â–¼${diff}`;
        changeIcon = 'â–¼';
      }
    }
    
    return {
      rank: currentItem.rank,
      prevRankCompany: prevItemByRank ? prevItemByRank.company : '-',
      company: currentItem.company,
      change,
      changeIcon,
      diff
    };
  });
};

const usComparisonData = createComparisonData(marketCapData.US || [], prevMarketCapData.US || []);
const krComparisonData = createComparisonData(marketCapData.KR || [], prevMarketCapData.KR || []);
