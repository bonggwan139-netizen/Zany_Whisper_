---
import { getCollection, getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
	const posts = await getCollection('posts', ({ data }) => !data.draft);
	return posts.map(post => ({
		params: { slug: post.slug },
		props: { post }
	}));
}

interface Props {
	post: any;
}

const { post } = Astro.props;
const entry = await getEntry('posts', post.slug);
const { Content } = await entry.render();
---

<Layout>
	<article id="post-container">
		<header id="post-header">
			<h1 id="post-title">{post.data.title}</h1>
			<div class="post-meta-header">
				<time class="post-date" datetime={post.data.pubDate.toISOString()}>
					{post.data.pubDate.toLocaleDateString('ko-KR', {
						year: 'numeric',
						month: 'long',
						day: 'numeric'
					})}
				</time>
				{post.data.tags.length > 0 && (
					<div class="post-tags">
						{post.data.tags.map(tag => (
							<span class="tag">{tag}</span>
						))}
					</div>
				)}
			</div>
		</header>

		<div id="post-content">
			<Content />
		</div>

		<footer id="post-footer">
			<a href="/archive" class="back-link">← 목록으로 돌아가기</a>
		</footer>
	</article>
</Layout>

<style>
	#post-container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		max-width: 720px;
		margin: 0 auto;
		padding: 60px 16px 80px;
		color: #111827;
	}

	#post-header {
		margin-bottom: 48px;
		padding-bottom: 24px;
		border-bottom: 1px solid #e5e7eb;
	}

	#post-title {
		font-size: 36px;
		margin: 0 0 16px;
		font-weight: 700;
		line-height: 1.3;
	}

	.post-meta-header {
		display: flex;
		align-items: center;
		gap: 16px;
		flex-wrap: wrap;
		font-size: 14px;
	}

	.post-date {
		color: #6b7280;
	}

	.post-tags {
		display: flex;
		gap: 8px;
		flex-wrap: wrap;
	}

	.tag {
		display: inline-block;
		padding: 4px 10px;
		background: #f3f4f6;
		color: #6b7280;
		border-radius: 4px;
		font-size: 13px;
		transition: background 0.2s;
	}

	.tag:hover {
		background: #e5e7eb;
	}

	#post-content {
		margin-bottom: 48px;
		line-height: 1.8;
		font-size: 16px;
	}

	#post-content :global(h2) {
		font-size: 24px;
		margin: 32px 0 16px;
		font-weight: 600;
		color: #111827;
	}

	#post-content :global(h3) {
		font-size: 20px;
		margin: 24px 0 12px;
		font-weight: 600;
		color: #111827;
	}

	#post-content :global(p) {
		margin: 0 0 16px;
		color: #374151;
	}

	#post-content :global(ul),
	#post-content :global(ol) {
		margin: 16px 0;
		padding-left: 24px;
		color: #374151;
	}

	#post-content :global(li) {
		margin: 8px 0;
	}

	#post-content :global(code) {
		background: #f3f4f6;
		padding: 2px 6px;
		border-radius: 3px;
		font-family: 'Courier New', monospace;
		font-size: 14px;
		color: #d97706;
	}

	#post-content :global(blockquote) {
		border-left: 4px solid #6db3e8;
		padding-left: 16px;
		margin: 20px 0;
		color: #6b7280;
		font-style: italic;
	}

	#post-footer {
		padding-top: 24px;
		border-top: 1px solid #e5e7eb;
	}

	.back-link {
		display: inline-block;
		color: #6db3e8;
		text-decoration: none;
		font-size: 14px;
		transition: color 0.2s;
	}

	.back-link:hover {
		color: #40b0db;
	}

	@media screen and (max-width: 768px) {
		#post-container {
			padding: 40px 16px 60px;
		}

		#post-title {
			font-size: 28px;
		}

		#post-header {
			margin-bottom: 32px;
			padding-bottom: 16px;
		}

		.post-meta-header {
			flex-direction: column;
			align-items: flex-start;
			gap: 8px;
		}

		#post-content {
			font-size: 15px;
			line-height: 1.7;
		}

		#post-content :global(h2) {
			font-size: 22px;
		}
	}
</style>
